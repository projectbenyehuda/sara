- if @sara_mode == :suggest || @sara_mode == :search
  .navigation-area{style: 'background-color: transparent;'}
    .navigation
      %button.sara-button.button-primary.back-button
        .by-icon-v02> 2
        = t('nav.back_home')
      - if @sara_mode == :suggest
        .breadcrumbs
          .by-icon-v02 1
          - if @suggest_choices.present?
            .breadcrumbs-text
              %a{href: suggest_path}= t('nav.suggest_topics')
            .by-icon-v02 1
            .breadcrumbs-text
              %a{:href => ""} '...'
            .by-icon-v02 1
            .breadcrumbs-text
              %a{:href => ""} '...'
            .by-icon-v02 1
            .breadcrumbs-text.active
              %a{:href => ""} פרופסורים/ות
          - else
            .breadcrumbs-text.active
              %a= t('nav.suggest_topics')
